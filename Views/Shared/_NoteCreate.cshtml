@model NoteSandbax.Models.Notes


<!-- Put this part before </body> tag -->
<input type="checkbox" id="detailModal" class="modal-toggle" />
<div id="" class="modal modal-open">
    <div class="modal-box relative">
        <label for="my-modal-3" onclick="closeDetails()" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
        <h3 class="text-lg font-bold">Create a new Note!</h3>
        <p class="py-4">

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group p-2">
                           
                            <input asp-for="Subject" type="text" placeholder="Subject" class="input input-bordered input-primary w-full max-w-xs" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group p-2">
                           
                            <textarea type="text" asp-for="body" placeholder="Note body"  class="textarea textarea-primary" cols="42" rows="5"></textarea>
                            <span asp-validation-for="body" class="text-danger"></span>
                        </div>
                        <div class="form-group p-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </p>
    </div>
</div>